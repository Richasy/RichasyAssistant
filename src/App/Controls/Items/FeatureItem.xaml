<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="RichasyAssistant.App.Controls.Items.FeatureItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RichasyAssistant.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RichasyAssistant.App.Controls.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:CardPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        Command="{x:Bind Command, Mode=OneWay}"
        StrokeThickness="1">
        <StackPanel Margin="0,12" Spacing="8">
            <Image
                Width="22"
                HorizontalAlignment="Center"
                Source="{x:Bind Icon, Mode=OneWay}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="12"
                Text="{x:Bind Text, Mode=OneWay}"
                TextAlignment="Center" />
        </StackPanel>
    </controls:CardPanel>
</UserControl>
